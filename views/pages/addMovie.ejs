<!DOCTYPE html>
<html lang="en">
<head>
  <%- include('../partials/header') %>
  <title>Add Movie</title>
</head>
<body>
  <div class="container mt-5">
    <h2 class="text-center mb-4 text-primary">ğŸ¬ Add New Movie</h2>

    <!-- Flash Messages -->
    <% if (error && error.length > 0) { %>
      <div class="alert alert-danger text-center"><%= error %></div>
    <% } %>
    <% if (success && success.length > 0) { %>
      <div class="alert alert-success text-center"><%= success %></div>
    <% } %>

    <form action="/add" method="POST" enctype="multipart/form-data" class="shadow p-4 rounded bg-light">

      <div class="mb-3">
        <label for="title" class="form-label">ğŸï¸ Movie Title</label>
        <input type="text" name="title" id="title" class="form-control" required>
      </div>

      <div class="mb-3">
        <label for="description" class="form-label">ğŸ“ Description</label>
        <textarea name="description" id="description" class="form-control" rows="3" placeholder="Write a short movie description..." required></textarea>
      </div>

      <div class="mb-3">
        <label for="theater" class="form-label">ğŸ¢ Theater</label>
        <input type="text" name="theater" id="theater" class="form-control" required>
      </div>

      <div class="mb-3">
        <label for="showtimes" class="form-label">ğŸ•’ Showtimes</label>
        <input type="text" name="showtimes" id="showtimes" class="form-control" placeholder="e.g., 2025-07-07T14:00, 2025-07-07T18:30" required>
        <small class="form-text text-muted">Comma-separated ISO datetime values</small>
      </div>

      <div class="mb-3">
        <label for="poster" class="form-label">ğŸ–¼ï¸ Poster Image</label>
        <input type="file" name="poster" id="poster" class="form-control" accept="image/*" required>
      </div>

      <button type="submit" class="btn btn-primary w-100">â• Create Movie</button>
    </form>
  </div>

  <%- include('../partials/footer') %>
</body>
</html>
